{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://scp-protocol.org/schemas/page/0.1.json",
  "title": "SCP Page Object",
  "description": "Schema for SCP page objects",
  "type": "object",
  "required": ["url", "title", "description", "modified", "language", "content"],
  "properties": {
    "url": {
      "type": "string",
      "format": "uri",
      "pattern": "^https?://",
      "description": "Full URL of the page"
    },
    "title": {
      "type": "string",
      "description": "Page title"
    },
    "description": {
      "type": "string",
      "description": "Meta description"
    },
    "author": {
      "type": "string",
      "description": "Content author"
    },
    "published": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 publication date"
    },
    "modified": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 last modified date"
    },
    "language": {
      "type": "string",
      "pattern": "^[a-z]{2}(-[A-Z]{2})?$",
      "description": "Language code (e.g., en, es, en-US)"
    },
    "canonical": {
      "type": "string",
      "format": "uri",
      "description": "Canonical URL"
    },
    "schema": {
      "type": "object",
      "description": "Optional Schema.org structured data (JSON-LD format)"
    },
    "content": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/contentBlock"
      },
      "description": "Ordered array of content blocks"
    }
  },
  "definitions": {
    "contentBlock": {
      "oneOf": [
        {
          "type": "object",
          "required": ["type", "text"],
          "properties": {
            "type": { "const": "text" },
            "text": { "type": "string" }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": ["type", "level", "text"],
          "properties": {
            "type": { "const": "heading" },
            "level": { "type": "integer", "minimum": 1, "maximum": 6 },
            "text": { "type": "string" }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": ["type", "url", "text"],
          "properties": {
            "type": { "const": "link" },
            "url": { "type": "string", "format": "uri" },
            "text": { "type": "string" },
            "rel": {
              "type": "array",
              "items": { "type": "string" }
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": ["type", "url", "alt"],
          "properties": {
            "type": { "const": "image" },
            "url": { "type": "string", "format": "uri" },
            "alt": { "type": "string" }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": ["type", "ordered", "items"],
          "properties": {
            "type": { "const": "list" },
            "ordered": { "type": "boolean" },
            "items": {
              "type": "array",
              "items": { "type": "string" }
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": ["type", "code"],
          "properties": {
            "type": { "const": "code" },
            "language": { "type": "string" },
            "code": { "type": "string" }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": ["type", "rows"],
          "properties": {
            "type": { "const": "table" },
            "rows": {
              "type": "array",
              "items": {
                "type": "array",
                "items": { "type": "string" }
              }
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": ["type", "text"],
          "properties": {
            "type": { "const": "quote" },
            "text": { "type": "string" },
            "citation": { "type": "string" }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": ["type", "name", "url"],
          "properties": {
            "type": { "const": "video" },
            "name": { "type": "string", "description": "Video title" },
            "url": {
              "oneOf": [
                { "type": "string", "format": "uri" },
                {
                  "type": "array",
                  "minItems": 1,
                  "items": {
                    "type": "object",
                    "required": ["href", "mediaType"],
                    "properties": {
                      "href": { "type": "string", "format": "uri" },
                      "mediaType": { "type": "string" },
                      "rel": { "type": "string" }
                    }
                  }
                }
              ],
              "description": "Video URL(s) - ActivityStreams 2.0 format"
            },
            "duration": {
              "type": "string",
              "pattern": "^PT(?=.*[HMS])(\\d+H)?(\\d+M)?(\\d+(\\.\\d+)?S)?$",
              "description": "ISO 8601 duration (e.g., PT5M20S)"
            },
            "width": { "type": "integer", "minimum": 0 },
            "height": { "type": "integer", "minimum": 0 },
            "icon": {
              "type": "object",
              "properties": {
                "type": { "const": "Image" },
                "url": { "type": "string", "format": "uri" }
              },
              "description": "Thumbnail/poster image"
            },
            "summary": { "type": "string", "description": "Video description" },
            "captions": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["language", "url", "label"],
                "properties": {
                  "language": { "type": "string" },
                  "url": { "type": "string", "format": "uri" },
                  "label": { "type": "string" }
                }
              }
            },
            "chapters": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["time", "title"],
                "properties": {
                  "time": { "type": "integer", "minimum": 0 },
                  "title": { "type": "string" }
                }
              }
            },
            "transcript": { "type": "string" }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": ["type", "name", "url"],
          "properties": {
            "type": { "const": "audio" },
            "name": { "type": "string", "description": "Audio title" },
            "url": {
              "oneOf": [
                { "type": "string", "format": "uri" },
                {
                  "type": "array",
                  "minItems": 1,
                  "items": {
                    "type": "object",
                    "required": ["href", "mediaType"],
                    "properties": {
                      "href": { "type": "string", "format": "uri" },
                      "mediaType": { "type": "string" }
                    }
                  }
                }
              ],
              "description": "Audio URL(s) - ActivityStreams 2.0 format"
            },
            "duration": {
              "type": "string",
              "pattern": "^PT(?=.*[HMS])(\\d+H)?(\\d+M)?(\\d+(\\.\\d+)?S)?$",
              "description": "ISO 8601 duration (e.g., PT1H for 1 hour)"
            },
            "icon": {
              "type": "object",
              "properties": {
                "type": { "const": "Image" },
                "url": { "type": "string", "format": "uri" }
              },
              "description": "Cover art/thumbnail image"
            },
            "summary": { "type": "string", "description": "Audio description" },
            "attributedTo": { "type": "string", "description": "Artist/creator name or Person object" },
            "partOf": { "type": "string", "description": "Album/series name or Collection object" },
            "chapters": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["time", "title"],
                "properties": {
                  "time": { "type": "integer", "minimum": 0 },
                  "title": { "type": "string" }
                }
              }
            },
            "transcript": { "type": "string" }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": ["type", "format", "data"],
          "properties": {
            "type": { "const": "structured" },
            "format": {
              "type": "string",
              "enum": ["json-ld", "microdata", "schema-org"]
            },
            "data": { "type": "object" }
          },
          "additionalProperties": false
        }
      ]
    }
  }
}